<?xml version="1.0" encoding="utf-8" ?>
<base:BaseRegistrationView x:Name="ThisPage" x:Class="NeuroAccessMaui.UI.Pages.Registration.Views.LoadingView" x:DataType="viewmodel:LoadingViewModel"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:base="clr-namespace:NeuroAccessMaui.UI.Pages.Registration"
	xmlns:viewmodel="clr-namespace:NeuroAccessMaui.UI.Pages.Registration.Views">

	<Grid
		RowDefinitions="*,auto,3*,auto">

		<HorizontalStackLayout x:Name="LabelLayout"
			Grid.Row="1"
			HorizontalOptions="Center"
			VerticalOptions="Center"
			Opacity="0"
			Spacing="8">
			<Label
				FontSize="16"
				Text="NEW"
				VerticalTextAlignment="Center" />
			<Label
				FontSize="22"
				Text="WAYS"
				VerticalTextAlignment="Center" />
			<Label
				FontSize="16"
				Text="OF"
				VerticalTextAlignment="Center" />
			<Label
				FontSize="22"
				Text="WORLDMAKING"
				VerticalTextAlignment="Center" />
		</HorizontalStackLayout>

		<ActivityIndicator
			Grid.Row="2"
			VerticalOptions="Center"
			IsRunning="true"
			IsVisible="true" />
		<Frame
			Grid.Row="3"
			BackgroundColor="#99ffffff"
			CornerRadius="5"
			IsVisible="{Binding Path=DisplayConnectionText}">
			<Label
				HorizontalOptions="CenterAndExpand"
				FontSize="Medium"
				Text="{Binding Path=ConnectionStateText}"
				TextColor="Black" />
		</Frame>
	</Grid>
</base:BaseRegistrationView>
