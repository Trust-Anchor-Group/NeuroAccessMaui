<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage x:Class="NeuroAccessMaui.UI.Pages.Main.CameraTest.CameraTestPage"
					  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
					  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
					  xmlns:base="clr-namespace:NeuroAccessMaui.UI.Pages"
					  xmlns:controls="clr-namespace:NeuroAccessMaui.UI.Controls"
					  xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
					  xmlns:local="clr-namespace:NeuroAccessMaui.UI.Pages.Main.CameraTest">

	<base:BaseContentPage.BindingContext>
		<local:CameraTestViewModel />
	</base:BaseContentPage.BindingContext>

	<AbsoluteLayout>
		<controls:CameraView
			x:Name="Camera"
			AbsoluteLayout.LayoutBounds="0.5,0,1.6,1"
			AbsoluteLayout.LayoutFlags="All"
			VerticalOptions="Fill"
			HorizontalOptions="Fill"
			CaptureMode="Manual" />

		<Grid
			AbsoluteLayout.LayoutBounds="0,0,1,-1"
			AbsoluteLayout.LayoutFlags="WidthProportional"
			ColumnDefinitions="auto, *, auto"
			Margin="16,8,16,8">
			<controls:SvgButton Style="{StaticResource IconButton}" Command="{Binding GoBackCommand}" SvgSource="close.svg"/>
		</Grid>

		<Grid
			AbsoluteLayout.LayoutBounds="0,1,1,-1"
			AbsoluteLayout.LayoutFlags="PositionProportional,WidthProportional"
			Padding="16,0,16,16">
			<controls:TextButton Style="{StaticResource PrimaryButton}"
							 LabelData="Take Picture"
							 Command="{Binding TakePhotoCommand, Source={x:Reference Camera}}"/>
		</Grid>
	</AbsoluteLayout>

</base:BaseContentPage>
