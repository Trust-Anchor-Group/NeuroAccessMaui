<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage x:Name="ThisPage"
							 x:Class="NeuroAccessMaui.UI.Pages.Wallet.RequestPayment.RequestPaymentPage"
							 x:DataType="viewmodel:RequestPaymentViewModel"
							 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
							 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
							 xmlns:l="clr-namespace:NeuroAccessMaui.Services.Localization"
							 xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
							 xmlns:ui="clr-namespace:NeuroAccessMaui.UI"
							 xmlns:base="clr-namespace:NeuroAccessMaui.UI.Pages"
							 xmlns:controls="clr-namespace:NeuroAccessMaui.UI.Controls"
							 xmlns:converters="clr-namespace:NeuroAccessMaui.UI.Converters"
							 xmlns:viewmodel="clr-namespace:NeuroAccessMaui.UI.Pages.Wallet.RequestPayment">
	<Grid BackgroundColor="{DynamicResource SurfaceBackgroundWL}">

		<controls:Background/>

		<ScrollView x:Name="ScrollView" Grid.Row="1" Margin="8,0">
			<VerticalStackLayout>
				<Grid ColumnDefinitions="auto, *" RowDefinitions="auto" Margin="8">
					<controls:SvgButton HorizontalOptions="Start" Command="{Binding GoBackCommand}"
										Style="{DynamicResource IconButton}" SvgSource="close.svg" />

					<Label Text="{l:Localize RequestPayment}" Style="{DynamicResource PageTitleLabel}" Grid.Column="1" HorizontalOptions="End"/>
				</Grid>

				<Border Style="{DynamicResource BorderSet}">
					<VerticalStackLayout>
						<Label Text="{l:Localize RequestPayment}" Margin="{DynamicResource SmallTopMargins}" VerticalOptions="Start"/>
						<Label Text="{l:Localize RequestPaymentDescription}" Style="{DynamicResource InfoLabel}" VerticalOptions="Start" Margin="0,8,0,16"/>

						<!-- AMOUNT -->
						<Label Text="{l:Localize Amount}" Style="{DynamicResource Brand2BodySHeadSHeadL}"/>
						<Grid ColumnDefinitions="*,auto" RowDefinitions="auto" Padding="0" Margin="0" ColumnSpacing="0" RowSpacing="0">
							<Border HeightRequest="70" Style="{DynamicResource BorderSubSet}" Background="{DynamicResource InputFieldsSurfaceBackgroundActive}">
								<controls:CompositeEntry EntryData="{Binding AmountText}"
																 BackgroundColor="{Binding Path=AmountOk, Converter={converters:ControlBgColor}}"
																 Placeholder="{Binding Path=Currency}"
																 Style="{DynamicResource ThickCompositeEntry}"
																 BorderStroke="Transparent"/>
							</Border>
							<controls:ImageButton Grid.Column="1" Grid.Row="0" PathData="{x:Static ui:Geometries.CalculatorPath}"
												  Command="{Binding OpenCalculatorCommand}" CommandParameter="AmountText"
												  Style="{DynamicResource ImageOnlyButton}"
												  VerticalOptions="Center"/>
						</Grid>

						<!-- AMOUNT EXTRA -->
						<Label Text="{l:Localize AmountExtra}" Style="{DynamicResource Brand2BodySHeadSHeadL}" Margin="0,16,0,0"/>
						<Grid ColumnDefinitions="*,auto" RowDefinitions="auto" Padding="0" Margin="0" ColumnSpacing="0" RowSpacing="0">
							<Border HeightRequest="70" Style="{DynamicResource BorderSubSet}" Background="{DynamicResource InputFieldsSurfaceBackgroundActive}">
								<controls:CompositeEntry EntryData="{Binding AmountExtraText}"
														 BackgroundColor="{Binding Path=AmountExtraOk, Converter={converters:ControlBgColor}}"
														 Placeholder="{Binding Path=Currency}"
														 Style="{DynamicResource ThickCompositeEntry}"
														 BorderStroke="Transparent"/>
							</Border>
							<controls:ImageButton Grid.Column="1" Grid.Row="0" PathData="{x:Static ui:Geometries.CalculatorPath}"
												  Command="{Binding OpenCalculatorCommand}" CommandParameter="AmountExtraText"
												  Style="{DynamicResource ImageOnlyButton}"
												  VerticalOptions="Center"/>
						</Grid>

						<!-- MESSAGE -->
						<Label Text="{l:Localize Message}" Style="{DynamicResource Brand2BodySHeadSHeadL}" Margin="0,16,0,0"/>
						<Border HeightRequest="70" Style="{DynamicResource BorderSubSet}" Background="{DynamicResource InputFieldsSurfaceBackgroundActive}">
							<controls:CompositeEntry Style="{DynamicResource RegularCompositeEntry}"
													 EntryData="{Binding Path=Message}"
													 BorderStroke="Transparent"
													 Placeholder="{l:Localize Optional}"/>
						</Border>

						<!-- BUTTONS -->
						<Grid ColumnDefinitions="auto,*" RowDefinitions="auto" Margin="0,16,0,8">
							<CheckBox Grid.Column="0" Grid.Row="0" IsChecked="{Binding Path=EncryptMessage, Mode=TwoWay}" VerticalOptions="Center"/>
							<Label Grid.Column="1" Grid.Row="0" Text="{l:Localize EncryptMessage}" VerticalOptions="Center" Margin="{DynamicResource SmallLeftMargins}"/>
						</Grid>
						<controls:TextButton LabelData="{l:Localize GenerateQrCode}" Command="{Binding GenerateQrCodeCommand}"
													 Margin="{DynamicResource SmallBottomMargins}" Style="{DynamicResource FilledTextButton}"
													 IsEnabled="{Binding AmountOk}"/>

						<Image x:Name="QrCode" BackgroundColor="{DynamicResource SurfaceBackgroundWL}" Source="{Binding Path=QrCode}" 
									   IsVisible="{Binding Path=HasQrCode}" WidthRequest="{Binding Path=QrCodeWidth}" 
									   HeightRequest="{Binding Path=QrCodeHeight}" HorizontalOptions="Center" VerticalOptions="Start" 
									   Margin="0" />
						<Label Text="{l:Localize Share}" Margin="{DynamicResource SmallTopMargins}" VerticalOptions="Start"
							   IsVisible="{Binding Path=HasQrCode}" />
						<Label Text="{l:Localize ShareDescription}"
							   Style="{DynamicResource InfoLabel}" VerticalOptions="Start"
							   IsVisible="{Binding Path=HasQrCode}"
							   Margin="0,8,0,8"/>

						<controls:TextButton x:Name="ShareContactButton" LabelData="{l:Localize Contacts}" Command="{Binding ShareContactCommand}"
											 IsVisible="{Binding Path=HasQrCode}" Margin="{DynamicResource SmallBottomMargins}"
											 Style="{DynamicResource FilledTextButton}"
											 IsEnabled="{Binding HasQrCode}"/>

						<controls:TextButton x:Name="ShareExternalButton" LabelData="{l:Localize OtherApp}" Command="{Binding OpenQrPopupCommand}"
											 IsVisible="{Binding Path=HasQrCode}" Margin="{DynamicResource SmallBottomMargins}"
											 Style="{DynamicResource FilledTextButton}"
											 IsEnabled="{Binding HasQrCode}"/>
					</VerticalStackLayout>
				</Border>
			</VerticalStackLayout>
		</ScrollView>
	</Grid>
</base:BaseContentPage>
