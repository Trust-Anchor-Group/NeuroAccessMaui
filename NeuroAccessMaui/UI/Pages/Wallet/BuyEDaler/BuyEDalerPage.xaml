<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage x:Name="ThisPage"
							 x:Class="NeuroAccessMaui.UI.Pages.Wallet.BuyEDaler.BuyEDalerPage"
							 x:DataType="viewmodel:BuyEDalerViewModel"
							 xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
							 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
							 xmlns:l="clr-namespace:NeuroAccessMaui.Services.Localization"
							 xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
							 xmlns:ui="clr-namespace:NeuroAccessMaui.UI"
							 xmlns:base="clr-namespace:NeuroAccessMaui.UI.Pages"
							 xmlns:controls="clr-namespace:NeuroAccessMaui.UI.Controls"
							 xmlns:converters="clr-namespace:NeuroAccessMaui.UI.Converters"
							 xmlns:viewmodel="clr-namespace:NeuroAccessMaui.UI.Pages.Wallet.BuyEDaler">
	<Grid BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBackgroundLight}, Dark={StaticResource PrimaryBackgroundDark}}">

		<controls:Background/>

		<ScrollView>
			<VerticalStackLayout Spacing="{StaticResource SmallSpacing}" Margin="{StaticResource MediumSpacing}">
				<controls:ImageButton HorizontalOptions="Start" Command="{Binding GoBackCommand}"
											 Style="{StaticResource ImageOnlyButton}" PathData="{x:Static ui:Geometries.BackButtonPath}" />

				<Label Text="{l:Localize BuyEDaler}" Style="{StaticResource PageTitleLabel}"/>

				<Frame Style="{StaticResource FrameSet}">
					<VerticalStackLayout Spacing="{StaticResource LargeSpacing}">
						<Label Text="{l:Localize BuyEDalerDescription}" VerticalOptions="Start"/>
						<Label Text="{l:Localize Amount}"/>
						<Grid ColumnDefinitions="*,auto" RowDefinitions="auto" Padding="0" Margin="0" ColumnSpacing="0" RowSpacing="0">

							<controls:CompositeEntry Style="{StaticResource RegularCompositeEntry}"
							                         Grid.Column="0" Grid.Row="0" Keyboard="Numeric"
							                         EntryData="{Binding Path=AmountText}"
							                         BackgroundColor="{Binding AmountEntryValid, Converter={converters:ControlBgColor}}"
							                         Placeholder="{Binding Path=Currency}"/>

							<controls:ImageButton Grid.Column="1" Grid.Row="0" PathData="{x:Static ui:Geometries.CalculatorPath}"
														 Style="{StaticResource ImageOnlyButton}" Command="{Binding OpenCalculatorCommand}"
														 CommandParameter="AmountText" />
						</Grid>
						<controls:TextButton LabelData="{l:Localize Buy}" Command="{Binding Path=BuyCommand}" Style="{StaticResource FilledTextButton}"
													Margin="{StaticResource SmallBottomMargins}"/>
					</VerticalStackLayout>
				</Frame>
			</VerticalStackLayout>
		</ScrollView>
	</Grid>
</base:BaseContentPage>
