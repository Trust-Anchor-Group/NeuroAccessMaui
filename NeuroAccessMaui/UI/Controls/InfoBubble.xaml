<?xml version="1.0" encoding="utf-8" ?>
<ContentView
	x:Class="NeuroAccessMaui.UI.Controls.InfoBubble"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:controls="clr-namespace:NeuroAccessMaui.UI.Controls"
	x:Name="This">

	<Border	BackgroundColor="{Binding BackgroundColor, Source={RelativeSource AncestorType={x:Type controls:InfoBubble}}, x:DataType=controls:InfoBubble}"
			Padding="{DynamicResource MediumMargins}"
			StrokeShape="RoundRectangle 16,16,0,16"
			VerticalOptions="Center">
		<Border.Shadow>
			<Shadow Brush="{DynamicResource SurfaceShadowColorWL}" Offset="0,4"/>
		</Border.Shadow>
		<Grid ColumnSpacing="{DynamicResource SmallSpacing}"
			  ColumnDefinitions="auto, *">
			<controls:SvgView
				Source="{Binding SvgSource, Source={RelativeSource AncestorType={x:Type controls:InfoBubble}}, x:DataType=controls:InfoBubble}"
				WidthRequest="20"
				HeightRequest="20"
				VerticalOptions="Start"
				TintColor="{Binding ContentColor, Source={RelativeSource AncestorType={x:Type controls:InfoBubble}}, x:DataType=controls:InfoBubble}"/>
			<Label
				Grid.Column="1"
				VerticalOptions="Start"
				Text="{Binding LabelText, Source={RelativeSource AncestorType={x:Type controls:InfoBubble}}, x:DataType=controls:InfoBubble}"
				TextColor="{Binding ContentColor, Source={RelativeSource AncestorType={x:Type controls:InfoBubble}}, x:DataType=controls:InfoBubble}"
				Style="{DynamicResource InfoLabel}"/>
		</Grid>
	</Border>
</ContentView>
