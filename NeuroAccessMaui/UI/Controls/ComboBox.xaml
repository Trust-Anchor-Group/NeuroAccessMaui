<?xml version="1.0" encoding="utf-8" ?>
<StackLayout x:Name="ThisPage" x:Class="NeuroAccessMaui.UI.Controls.ComboBox"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

	<Entry x:Name="InnerEntry"
		Margin="0"
		Focused="InnerEntry_Focused"
		TextChanged="InnerEntry_TextChanged"
		Unfocused="InnerEntry_Unfocused" />

	<ListView x:Name="InnerListView"
		Margin="0"
		HorizontalOptions="FillAndExpand"
		VerticalOptions="FillAndExpand"
		ItemSelected="InnerListView_ItemSelected"
		SelectedItem="{Binding SelectedItem, Source=ThisPage}" />

	<BoxView
		HeightRequest="1"
		Margin="0"
		IsVisible="{Binding IsVisile, Source=InnerListView}"
		Color="Black" />

</StackLayout>
