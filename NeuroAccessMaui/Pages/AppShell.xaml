<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="NeuroAccessMaui.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:local="clr-namespace:NeuroAccessMaui"
	xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">

	<Shell.Behaviors>
		<toolkit:StatusBarBehavior StatusBarColor="{AppThemeBinding Light={StaticResource PrimaryBackgroundLight}, Dark={StaticResource PrimaryBackgroundDark}}" StatusBarStyle="{AppThemeBinding Light='DarkContent', Dark='LightContent'}" />
	</Shell.Behaviors>

	<ShellContent
		Title="Home"
		ContentTemplate="{DataTemplate local:MainPage}"
		Route="MainPage" />

</Shell>
