						IsChecked="{Binding Path=ApprovePiiIsChecked, Mode=TwoWay}"
						IsVisible="{Binding Path=IsForReview}" />
					<Label
						Grid.Row="31"
						Grid.Column="1"
						Grid.ColumnSpan="2"
						Margin="0,6,0,12"
						VerticalOptions="FillAndExpand"
						IsVisible="{Binding Path=IsForReview}"
						Text="{x:Static resx:AppResources.IApproveOfMyPersonalInformationToBeAssociated}" />
				</Grid>
				<Label x:Name="ConnectionState"
					HorizontalOptions="CenterAndExpand"
					IsVisible="{Binding Path=IsConnected, Converter={converters:LogicalNot}}"
					Text="{Binding Path=ConnectionStateText}" />
				<Button
					Margin="{StaticResource DefaultBottomOnlyMargin}"
					Command="{Binding Path=ApproveCommand}"
					IsEnabled="{Binding Path=IsBusy, Converter={converters:LogicalNot}}"
					IsVisible="{Binding Path=IsForReview}"
					Text="{x:Static resx:AppResources.ApproveInformation}" />
				<Button
					Margin="{StaticResource DefaultBottomOnlyMargin}"
					Command="{Binding Path=RejectCommand}"
					IsEnabled="{Binding Path=IsBusy, Converter={converters:LogicalNot}}"
					IsVisible="{Binding Path=IsForReview}"
					Text="{x:Static resx:AppResources.RejectInformation}" />
				<Button
					Margin="{StaticResource DefaultBottomOnlyMargin}"
					Command="{Binding Path=ChangePinCommand}"
					IsEnabled="{Binding Path=IsBusy, Converter={converters:LogicalNot}}"
					IsVisible="{Binding Path=IsPersonal}"
					Text="{x:Static resx:AppResources.ChangePin}" />
				<Button
					Margin="{StaticResource DefaultBottomOnlyMargin}"
					Command="{Binding Path=CompromiseCommand}"
					IsEnabled="{Binding Path=IsBusy, Converter={converters:LogicalNot}}"
					IsVisible="{Binding Path=IsPersonal}"
					Text="{x:Static resx:AppResources.ReportAsCompromized}" />
				<Button
					Margin="{StaticResource DefaultBottomOnlyMargin}"
					Command="{Binding Path=RevokeCommand}"
					IsEnabled="{Binding Path=IsBusy, Converter={converters:LogicalNot}}"
					IsVisible="{Binding Path=IsPersonal}"
					Text="{x:Static resx:AppResources.RevokeInformation}" />
				<Button
					Margin="{StaticResource DefaultBottomOnlyMargin}"
					Command="{Binding Path=TransferCommand}"
					IsEnabled="{Binding Path=IsBusy, Converter={converters:LogicalNot}}"
					IsVisible="{Binding Path=IsPersonal}"
					Text="{x:Static resx:AppResources.TransferId}" />
			</StackLayout>
		</ScrollView>
		<!-- //!!! <image:ImageView x:Name="PhotoViewer" IsVisible="False"/> -->
	</Grid>

</base:BaseContentPage>
