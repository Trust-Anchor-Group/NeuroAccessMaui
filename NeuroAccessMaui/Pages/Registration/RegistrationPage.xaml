<?xml version="1.0" encoding="utf-8" ?>
<base:BaseContentPage x:Name="ThisPage" x:Class="NeuroAccessMaui.Pages.Registration.RegistrationPage" x:DataType="viewmodel:RegistrationViewModel" x:TypeArguments="viewmodel:RegistrationViewModel"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
	xmlns:base="clr-namespace:NeuroAccessMaui.Pages"
	xmlns:controls="clr-namespace:NeuroAccessMaui.Controls"
	xmlns:viewmodel="clr-namespace:NeuroAccessMaui.Pages.Registration"
	xmlns:views="clr-namespace:NeuroAccessMaui.Pages.Registration.Views">

	<Grid>
		<controls:Background />


		<!--  CONTENT  -->
		<Grid x:Name="GridWithAnimation"
			HorizontalOptions="FillAndExpand"
			VerticalOptions="FillAndExpand">

			<mct:StateContainer.StateViews>

				<views:LoadingView x:Name="LoadingView" mct:StateView.StateKey="Loading"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					x:FactoryMethod="Create" />

				<views:ChoosePurposeView x:Name="ChoosePurposeView" mct:StateView.StateKey="ChoosePurpose"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					x:FactoryMethod="Create" />

				<views:ValidatePhoneView x:Name="ValidatePhoneView" mct:StateView.StateKey="ValidatePhone"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					x:FactoryMethod="Create" />

				<views:ValidateEmailView x:Name="ValidateEmailView" mct:StateView.StateKey="ValidateEmail"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					x:FactoryMethod="Create" />

				<views:ChooseAccountView x:Name="ChooseAccountView" mct:StateView.StateKey="ChooseAccount"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					x:FactoryMethod="Create" />

				<views:DefinePinView x:Name="DefinePinView" mct:StateView.StateKey="DefinePin"
					HorizontalOptions="FillAndExpand"
					VerticalOptions="FillAndExpand"
					x:FactoryMethod="Create" />

			</mct:StateContainer.StateViews>

			<!--  default state  -->
			<Label
				HorizontalTextAlignment="Center"
				Text="Something went wrong!"
				VerticalTextAlignment="Center" />
		</Grid>

