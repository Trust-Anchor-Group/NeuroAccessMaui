<?xml version="1.0" encoding="utf-8"?>
<BrandingDescriptor xmlns="urn:neuroaccess:branding:1.0">

	<!-- Semantic version for this branding payload -->
	<Version major="1"
			 minor="2"
			 patch="3" />

	<!-- HTTP URI pointing to the color palette ResourceDictionary -->
	<ColorsUri>
		https://cdn.example.com/branding/colors/v1.2.3/Colors.xaml
	</ColorsUri>

	<!-- Optional images container -->
	<Images>
		<!-- Logo image -->
		<ImageRef id="logo"
				  uri="https://cdn.example.com/branding/images/logo-v1.2.3.svg"
				  role="logo"
				  width="200"
				  height="100"
				  contentType="image/svg+xml" />
		<!-- Banner image -->
		<ImageRef id="banner"
				  uri="https://cdn.example.com/branding/images/banner-v1.2.3.png"
				  role="banner"
				  width="1024"
				  height="256"
				  contentType="image/png" />
	</Images>
</BrandingDescriptor>
