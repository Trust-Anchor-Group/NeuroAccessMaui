<KYCProcess>
	<Page id="prepareDocuments">
		<Title>
			<Text lang="en">Before we start, we'd like to give you a tip.</Text>
		</Title>
		<Description>
			<Text lang="en">We'll ask for an official photo ID and proof of residence, so why not get them ready?</Text>
		</Description>
	</Page>
	<Page id="namePage">
		<Title>
			<Text lang="en">Nice to meet you, what's your name?</Text>
		</Title>
		<Field id="fullName" type="text" mapping="FULLNAME" required="true">
			<Label>
				<Text lang="en">Enter your full name</Text>
			</Label>
			<Placeholder>
				<Text lang="en">Full name</Text>
			</Placeholder>
			<Validation minLength="2">
				<Regex>^[\D]+$</Regex>
				<Message>
					<Text lang="en">Please enter your full name.</Text>
				</Message>
			</Validation>
		</Field>
	</Page>
	<Page id="documentNumberPage">
		<Title>
			<Text lang="en">Enter your Identity document number</Text>
		</Title>
		<Field id="documentNumber" type="text" mapping="PNR" required="true">
			<Label>
				<Text lang="en">Document number</Text>
			</Label>
			<Placeholder>
				<Text lang="en">Document number</Text>
			</Placeholder>
			<Validation>
				<Regex>^\d{3}\.\d{3}\.\d{3}\-\d{2}$</Regex>
				<Message>
					<Text lang="en">Please enter your document number.</Text>
				</Message>
			</Validation>
		</Field>
	</Page>
	<Page id="dateOfBirh">
		<Title>
			<Text lang="en">What's your date of birth?</Text>
		</Title>
		<Field id="dob" type="date" required="true">
			<Label>
				<Text lang="en">Date of Birth</Text>
			</Label>
			<Mapping key="BDAY">
				<Transform>day</Transform>
			</Mapping>
			<Mapping key="BMONTH">
				<Transform>month</Transform>
			</Mapping>
			<Mapping key="BYEAR">
				<Transform>year</Transform>
			</Mapping>
			<Validation min="1900-01-01" max="2025-01-01">
				<Message>
					<Text lang="en">Enter a valid date between 1900 and 2025</Text>
				</Message>
			</Validation>
		</Field>
	</Page>
	<Page id="identityDocuments">
		<Title>
			<Text lang="en">Let's validate your data through a photo ID</Text>
		</Title>
		<Description>
			<Text lang="en">It can be an ID card, driver's license, or passport.</Text>
		</Description>
		<Field id="documentType" type="picker" label="Document Type" required="true">
			<Label>
				<Text lang="en">Document Type</Text>
			</Label>
			<Options>
				<Option value="passport">
					<Text lang="en">Passport</Text>
				</Option>
				<Option value="identityCard">
					<Text lang="en">ID Card</Text>
				</Option>
				<Option value="driversLicense">
					<Text lang="en">Driver's license</Text>
				</Option>
			</Options>
			<Validation>
				<Message>
					<Text lang="en">You must select a document type</Text>
					<Text lang="sv">Du måste välja en dokumenttyp</Text>
				</Message>
			</Validation>
		</Field>
	</Page>
	<Page id="passportPage">
		<Title>
			<Text lang="en">Upload a photo of your passport</Text>
		</Title>
		<Description>
			<Text lang="en">Make sure all information is clearly visible</Text>
		</Description>
		<!-- Passport Upload Field (shown if passport is selected) -->
		<Field id="passportUpload" type="image" mapping="Passport" specialType="passport">
			<Placeholder>
				<Text lang="en">Choose file...</Text>
			</Placeholder>
			<Validation maxFileSizeMB="15">
				<FileTypes>
					<FileType>.jpg</FileType>
					<FileType>.jpeg</FileType>
					<FileType>.png</FileType>
					<FileType>.pdf</FileType>
				</FileTypes>
				<Message>
					<Text lang="en">Please upload a valid passport image or PDF (max 15MB)</Text>
				</Message>
			</Validation>
			<Metadata>
				<TargetWidth>1200</TargetWidth>
				<TargetHeight>1600</TargetHeight>
				<MinDpi>300</MinDpi>
			</Metadata>
		</Field>
		<Condition>
			<FieldRef>documentType</FieldRef>
			<Equals>passport</Equals>
		</Condition>
	</Page>
	<Page id="identityCardPage">
		<Title>
			<Text lang="en">Let's validate your data through a photo of your identity card.</Text>
		</Title>
		<Description>
			<Text lang="en">Make sure your name and photo is clearly visible.</Text>
		</Description>
		<!-- Identity Card Upload Field (shown if identityCard is selected) -->
		<Field id="identityCardFront" type="image" mapping="IdCardFront" specialType="identityCardFront">
			<Placeholder>
				<Text lang="en">Front of document...</Text>
			</Placeholder>
			<Validation maxFileSizeMB="15">
				<FileTypes>
					<FileType>.jpg</FileType>
					<FileType>.jpeg</FileType>
					<FileType>.png</FileType>
					<FileType>.pdf</FileType>
				</FileTypes>
				<Message>
					<Text lang="en">Please upload a valid identity card image or PDF (max 15MB)</Text>
					<Text lang="sv">Ladda upp en giltig ID-kortsbild eller PDF (max 15MB)</Text>
				</Message>
			</Validation>
			<Metadata>
				<TargetWidth>1000</TargetWidth>
				<TargetHeight>1500</TargetHeight>
				<MinDpi>200</MinDpi>
			</Metadata>
		</Field>
		<Field id="identityCardBack" type="image" mapping="IdCardFront" specialType="identityCardBack">
			<Placeholder>
				<Text lang="en">Back of document...</Text>
			</Placeholder>
			<Validation maxFileSizeMB="15">
				<FileTypes>
					<FileType>.jpg</FileType>
					<FileType>.jpeg</FileType>
					<FileType>.png</FileType>
					<FileType>.pdf</FileType>
				</FileTypes>
				<Message>
					<Text lang="en">Please upload a valid identity card image or PDF (max 15MB)</Text>
					<Text lang="sv">Ladda upp en giltig ID-kortsbild eller PDF (max 15MB)</Text>
				</Message>
			</Validation>
			<Metadata>
				<TargetWidth>1000</TargetWidth>
				<TargetHeight>1500</TargetHeight>
				<MinDpi>200</MinDpi>
			</Metadata>
		</Field>
		<Condition>
			<FieldRef>documentType</FieldRef>
			<Equals>identityCard</Equals>
		</Condition>
	</Page>
	<Page id="driversLicensePage">
		<Title>
			<Text lang="en">Let's validate your data through a photo of your driver's license.</Text>
		</Title>
		<Description>
			<Text lang="en">Make sure your information is clearly visible.</Text>
		</Description>
		<!-- Drivers license Front Upload (shown if driverslicense is selected) -->
		<Field id="driverslicenseFront" type="image" mapping="DriverLicenseFront" specialType="driversLicenseFront">
			<Placeholder>
				<Text lang="en">Front of document...</Text>
			</Placeholder>
			<Validation maxFileSizeMB="15">
				<FileTypes>
					<FileType>.jpg</FileType>
					<FileType>.jpeg</FileType>
					<FileType>.png</FileType>
					<FileType>.pdf</FileType>
				</FileTypes>
				<Message>
					<Text lang="en">Please upload the front of your driver's license (max 15MB)</Text>
				</Message>
			</Validation>
			<Metadata>
				<TargetWidth>900</TargetWidth>
				<TargetHeight>600</TargetHeight>
				<MinDpi>150</MinDpi>
			</Metadata>
		</Field>
		<!-- Drivers license Back Upload (shown if driverslicense is selected) -->
		<Field id="driverslicenseBack" type="image" mapping="DriverLicenseBack" specialType="driversLicenseBack">
			<Placeholder>
				<Text lang="en">Back of document...</Text>
			</Placeholder>
			<Validation maxFileSizeMB="15">
				<FileTypes>
					<FileType>.jpg</FileType>
					<FileType>.jpeg</FileType>
					<FileType>.png</FileType>
					<FileType>.pdf</FileType>
				</FileTypes>
				<Message>
					<Text lang="en">Please upload the back of your driver's license (max 15MB)</Text>
				</Message>
			</Validation>
			<Metadata>
				<TargetWidth>900</TargetWidth>
				<TargetHeight>600</TargetHeight>
				<MinDpi>150</MinDpi>
			</Metadata>
		</Field>
		<Condition>
			<FieldRef>documentType</FieldRef>
			<Equals>driversLicense</Equals>
		</Condition>
	</Page>
	
</KYCProcess>
