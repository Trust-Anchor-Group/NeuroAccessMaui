<KYCProcess>
	<Page id="personalInfo" title="Personal Information">
		<Title>
			<Text lang="en">Personal Information</Text>
			<Text lang="sv">Personuppgifter</Text>
		</Title>
		<Description>
			<Text lang="en">Please enter your personal details as they appear on your legal documents.</Text>
			<Text lang="sv">Ange dina personuppgifter enligt dina officiella dokument.</Text>
		</Description>
		<Section label="Basic Details">
			<Label>
				<Text lang="en">Basic Details</Text>
				<Text lang="sv">Grundläggande uppgifter</Text>
			</Label>
			<Field id="firstName" type="text" label="First Name" mapping="FIRST_NAME" required="true">
				<Label>
					<Text lang="en">First Name</Text>
					<Text lang="sv">Förnamn</Text>
				</Label>
				<Hint>
					<Text lang="en">Your given name</Text>
					<Text lang="sv">Ditt förnamn</Text>
				</Hint>
				<Placeholder>
					<Text lang="en">John</Text>
					<Text lang="sv">Johan</Text>
				</Placeholder>
				<Validation minLength="2" maxLength="40">
					<Regex>^[A-Za-z]+$</Regex>
					<Message>
						<Text lang="en">First name must contain only letters and be 2-40 characters long.</Text>
						<Text lang="sv">Förnamnet måste innehålla endast bokstäver och vara 2-40 tecken långt.</Text>
					</Message>
				</Validation>
				<Default>Maximiliam</Default>
			</Field>
			<Field id="dob" type="date" label="Date of Birth" required="true" mapping="BDATE">
				<Label>
					<Text lang="en">Date of Birth</Text>
					<Text lang="sv">Födelsedatum</Text>
				</Label>
				<Hint>
					<Text lang="en">Use the format YYYY-MM-DD</Text>
					<Text lang="sv">Använd formatet ÅÅÅÅ-MM-DD</Text>
				</Hint>
				<Validation min="1900-01-01" max="2020-01-01">
					<Message>
						<Text lang="en">Enter a valid date between 1900 and 2020</Text>
						<Text lang="sv">Ange ett giltigt datum mellan 1900 och 2020</Text>
					</Message>
				</Validation>
				<!-- Example: a date field with metadata could look like this -->
				<Metadata>
					<DateFormat>yyyy-MM-dd</DateFormat>
					<AllowFuture>false</AllowFuture>
				</Metadata>
			</Field>
			<Field id="isOrganization" type="boolean" label="Are you representing an organization?" mapping="IS_ORG" Required="true">
				<Label>
					<Text lang="en">Are you representing an organization?</Text>
					<Text lang="sv">Företräder du en organisation?</Text>
				</Label>
				<Hint>
					<Text lang="en">Select Yes if you are applying on behalf of an organization</Text>
					<Text lang="sv">Välj Ja om du ansöker för en organisation</Text>
				</Hint>
				<Default>false</Default>
			</Field>
			<Field id="email" type="text" label="Email Address">
				<Label>
					<Text lang="en">Email Address</Text>
					<Text lang="sv">E-postadress</Text>
				</Label>
				<Hint>
					<Text lang="en">We’ll send verification to this address.</Text>
					<Text lang="sv">Vi skickar en verifiering till denna adress.</Text>
				</Hint>
				<Placeholder>
					<Text lang="en">you@email.com</Text>
					<Text lang="sv">du@email.com</Text>
				</Placeholder>
				<Mapping key="EMAIL">
					<Transform>lowercase</Transform>
				</Mapping>
				<Validation minLength="5" maxLength="100">
					<Regex>^[^@\s]+@[^@\s]+\.[^@\s]+$</Regex>
					<Message>
						<Text lang="en">Enter a valid email address</Text>
						<Text lang="sv">Ange en giltig e-postadress</Text>
					</Message>
				</Validation>
				<Condition>
					<FieldRef>isOrganization</FieldRef>
					<Equals>true</Equals>
				</Condition>
				<Default>Maximiliam@gmail.com</Default>
				<Metadata>
					<InputType>email</InputType>
					<AutoComplete>email</AutoComplete>
				</Metadata>
			</Field>
			<Field id="newsletterOptIn" type="checkbox" label="Newsletter Subscription" required="true">
				<Label>
					<Text lang="en">Subscribe to our newsletter?</Text>
					<Text lang="sv">Prenumerera på vårt nyhetsbrev?</Text>
				</Label>
				<Hint>
					<Text lang="en">Get updates and offers by email</Text>
					<Text lang="sv">Få uppdateringar och erbjudanden via e-post</Text>
				</Hint>
				<Options>
					<Option value="yes">
						<Text lang="en">Yes, sign me up!</Text>
						<Text lang="sv">Ja, anmäl mig!</Text>
					</Option>
					<Option value="no">
						<Text lang="en">no, don't sign me up!</Text>
						<Text lang="sv">nej, anmäl mig ej!</Text>
					</Option>
				</Options>
				<Default>false</Default>
			</Field>
		</Section>
	</Page>

	<Page id="organizationInfo" title="Organization Information">
		<Title>
			<Text lang="en">Organization Information</Text>
			<Text lang="sv">Organisationsuppgifter</Text>
		</Title>
		<Condition>
			<FieldRef>isOrganization</FieldRef>
			<Equals>true</Equals>
		</Condition>
		<Description>
			<Text lang="en">Only fill this section if you are representing an organization.</Text>
			<Text lang="sv">Fyll i denna sektion endast om du företräder en organisation.</Text>
		</Description>
		<Section label="Organization Details">
			<Label>
				<Text lang="en">Organization Details</Text>
				<Text lang="sv">Organisationsuppgifter</Text>
			</Label>
			<Field id="orgName" type="text" label="Organization Name" mapping="ORG_NAME">
				<Label>
					<Text lang="en">Organization Name</Text>
					<Text lang="sv">Organisationsnamn</Text>
				</Label>
				<Hint>
					<Text lang="en">Registered legal name of the organization</Text>
					<Text lang="sv">Organisationens registrerade namn</Text>
				</Hint>
				<Placeholder>
					<Text lang="en">Example Corp</Text>
					<Text lang="sv">Exempelföretag AB</Text>
				</Placeholder>
				<Validation minLength="2" maxLength="100">
					<Message>
						<Text lang="en">Organization name is required</Text>
						<Text lang="sv">Organisationsnamn krävs</Text>
					</Message>
				</Validation>
			</Field>
		</Section>
	</Page>

	<Page id="identityDocuments" title="Identity Documents">
		<Title>
			<Text lang="en">Identity Documents</Text>
			<Text lang="sv">ID-handlingar</Text>
		</Title>
		<Description>
			<Text lang="en">Please select and upload the identity document you would like to provide. Accepted formats: jpg, jpeg, png, pdf.</Text>
			<Text lang="sv">Välj och ladda upp din identitetshandling. Tillåtna format: jpg, jpeg, png, pdf.</Text>
		</Description>
		<Section label="Document Type Selection">
			<Label>
				<Text lang="en">Document Type Selection</Text>
				<Text lang="sv">Typ av identitetshandling</Text>
			</Label>
			<Field id="documentType" type="picker" label="Select Document Type" mapping="DOC_TYPE" required="true">
				<Label>
					<Text lang="en">Select Document Type</Text>
					<Text lang="sv">Välj ID-handling</Text>
				</Label>
				<Hint>
					<Text lang="en">Choose which type of ID you want to provide.</Text>
					<Text lang="sv">Välj vilken typ av ID du vill lämna.</Text>
				</Hint>
				<Options>
					<Option value="passport">
						<Text lang="en">Passport</Text>
						<Text lang="sv">Pass</Text>
					</Option>
					<Option value="identityCard">
						<Text lang="en">Identity Card</Text>
						<Text lang="sv">ID-kort</Text>
					</Option>
					<Option value="driversLicense">
						<Text lang="en">Driver's license</Text>
						<Text lang="sv">Körkort</Text>
					</Option>
				</Options>
				<Validation>
					<Message>
						<Text lang="en">You must select a document type</Text>
						<Text lang="sv">Du måste välja en dokumenttyp</Text>
					</Message>
				</Validation>
			</Field>
		</Section>

		<Section label="Document Upload">
			<Label>
				<Text lang="en">Document Upload</Text>
				<Text lang="sv">Ladda upp dokument</Text>
			</Label>
			<!-- Passport Upload Field (shown if passport is selected) -->
			<Field id="passportUpload" type="image" label="Passport Photo" mapping="PASSPORT_FILE" specialType="passport">
				<Label>
					<Text lang="en">Passport Photo</Text>
					<Text lang="sv">Passfoto</Text>
				</Label>
				<Hint>
					<Text lang="en">Upload the photo page of your passport</Text>
					<Text lang="sv">Ladda upp fotosidan i ditt pass</Text>
				</Hint>
				<Placeholder>
					<Text lang="en">Choose file...</Text>
					<Text lang="sv">Välj fil...</Text>
				</Placeholder>
				<Condition>
					<FieldRef>documentType</FieldRef>
					<Equals>passport</Equals>
				</Condition>
				<Validation maxFileSizeMB="10">
					<FileTypes>
						<FileType>.jpg</FileType>
						<FileType>.jpeg</FileType>
						<FileType>.png</FileType>
						<FileType>.pdf</FileType>
					</FileTypes>
					<Message>
						<Text lang="en">Please upload a valid passport image or PDF (max 10MB)</Text>
						<Text lang="sv">Ladda upp en giltig passbild eller PDF (max 10MB)</Text>
					</Message>
				</Validation>
				<Metadata>
					<TargetWidth>1200</TargetWidth>
					<TargetHeight>1600</TargetHeight>
					<MinDpi>300</MinDpi>
				</Metadata>
			</Field>

			<!-- Identity Card Upload Field (shown if identityCard is selected) -->
			<Field id="identityCardUpload" type="image" label="Identity Card" mapping="IDENTITY_CARD_FRONT" specialType="identityCardFront">
				<Label>
					<Text lang="en">Identity Card</Text>
					<Text lang="sv">ID-kort</Text>
				</Label>
				<Hint>
					<Text lang="en">Upload the front side of your identity card</Text>
					<Text lang="sv">Ladda upp framsidan av ditt ID-kort</Text>
				</Hint>
				<Placeholder>
					<Text lang="en">Choose file...</Text>
					<Text lang="sv">Välj fil...</Text>
				</Placeholder>
				<Condition>
					<FieldRef>documentType</FieldRef>
					<Equals>identityCard</Equals>
				</Condition>
				<Validation maxFileSizeMB="10">
					<FileTypes>
						<FileType>.jpg</FileType>
						<FileType>.jpeg</FileType>
						<FileType>.png</FileType>
						<FileType>.pdf</FileType>
					</FileTypes>
					<Message>
						<Text lang="en">Please upload a valid identity card image or PDF (max 10MB)</Text>
						<Text lang="sv">Ladda upp en giltig ID-kortsbild eller PDF (max 10MB)</Text>
					</Message>
				</Validation>
				<Metadata>
					<TargetWidth>1000</TargetWidth>
					<TargetHeight>1500</TargetHeight>
					<MinDpi>200</MinDpi>
				</Metadata>
			</Field>

			<!-- Drivers license Front Upload (shown if driverslicense is selected) -->
			<Field id="driverslicenseFront" type="image" label="Driver's license (Front)" mapping="DRIVERS_LICENSE_FRONT" specialType="driversLicenseFront">
				<Label>
					<Text lang="en">Driver's license (Front)</Text>
					<Text lang="sv">Körkort (Framsida)</Text>
				</Label>
				<Hint>
					<Text lang="en">Upload the front of your driver’s license</Text>
					<Text lang="sv">Ladda upp framsidan av ditt körkort</Text>
				</Hint>
				<Placeholder>
					<Text lang="en">Choose file...</Text>
					<Text lang="sv">Välj fil...</Text>
				</Placeholder>
				<Condition>
					<FieldRef>documentType</FieldRef>
					<Equals>driversLicense</Equals>
				</Condition>
				<Validation maxFileSizeMB="10">
					<FileTypes>
						<FileType>.jpg</FileType>
						<FileType>.jpeg</FileType>
						<FileType>.png</FileType>
						<FileType>.pdf</FileType>
					</FileTypes>
					<Message>
						<Text lang="en">Please upload the front side (max 10MB)</Text>
						<Text lang="sv">Ladda upp framsidan (max 10MB)</Text>
					</Message>
				</Validation>
				<Metadata>
					<TargetWidth>900</TargetWidth>
					<TargetHeight>600</TargetHeight>
					<MinDpi>150</MinDpi>
				</Metadata>
			</Field>
			<!-- Drivers license Back Upload (shown if driverslicense is selected) -->
			<Field id="driverslicenseBack" type="image" label="Driver's license (Back)" mapping="DRIVERS_LICENSE_BACK" specialType="driversLicenseBack">
				<Label>
					<Text lang="en">Driver's license (Back)</Text>
					<Text lang="sv">Körkort (Baksida)</Text>
				</Label>
				<Hint>
					<Text lang="en">Upload the back of your driver’s license</Text>
					<Text lang="sv">Ladda upp baksidan av ditt körkort</Text>
				</Hint>
				<Placeholder>
					<Text lang="en">Choose file...</Text>
					<Text lang="sv">Välj fil...</Text>
				</Placeholder>
				<Condition>
					<FieldRef>documentType</FieldRef>
					<Equals>driversLicense</Equals>
				</Condition>
				<Validation maxFileSizeMB="10">
					<FileTypes>
						<FileType>.jpg</FileType>
						<FileType>.jpeg</FileType>
						<FileType>.png</FileType>
						<FileType>.pdf</FileType>
					</FileTypes>
					<Message>
						<Text lang="en">Please upload the back side (max 10MB)</Text>
						<Text lang="sv">Ladda upp baksidan (max 10MB)</Text>
					</Message>
				</Validation>
				<Metadata>
					<TargetWidth>900</TargetWidth>
					<TargetHeight>600</TargetHeight>
					<MinDpi>150</MinDpi>
				</Metadata>
			</Field>
		</Section>
	</Page>
</KYCProcess>
